{
    "name": "progression-bot",
    "version": "1.0.0",
    "description": "Bot to collect progression data weekly",
    "main": "bot.js",
    "author": "Aniela Lapinski",
    "dependencies": {
        "@discordjs/rest": "^1.0.0",
        "discord.io": "https://github.com/woor/discord.io/tarball/gateway_v6",
        "discord.js": "^14.0.3",
        "winston": "^3.8.1"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "babel-jest": "^28.1.3",
        "eslint": "^8.20.0",
        "jest": "^28.1.3"
    },
    "scripts": {
        "test": "jest"
    },
    "jest": {
        "verbose": true,
        "coverageReporters": ["text"],
        "coveragePathIgnorePatterns": ["<rootDir>/test", "<rootDir>/data","<rootDir>/node_modules"],
        "coverageThreshold": {
          "global": {
            "branches": 50,
            "functions": 50,
            "lines": 50,
            "statements": 50
          }
        }
    }
}
